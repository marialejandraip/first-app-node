<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <form action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" class="product-form" method="POST">
        <div class="form-control">
          <label for="title">Title: </label>
          <input type="text" name="title" id="title" value="<% if(editing){ %><%= product.title%><% } %>"/>
        </div>
        <div class="form-control">
          <label for="title">Description: </label>
          <textarea name="description" id="description" rows="6" ><% if(editing){ %><%= product.description%><% } %></textarea>
        </div>
        <div class="form-control">
          <label for="imageUrl">Image URL: </label>
          <input type="text" name="imageUrl" id="image" value="<% if(editing){ %><%= product.imageUrl%><% } %>"/>
        </div>
        <div class="form-control">
          <label for="price">Price: </label>
          <input type="number" name="price" id="price" value="<% if(editing){ %><%= product.price%><% } %>"/>
        </div>
        <% if(editing) { %>
          <input type="hidden" value="<%= product.id %>" name="productId" >
        <% } %> 

        <button type="submit"><% if(editing){ %>Update Product <% } else { %>Add product<% } %> </button>
      </form>
<%- include('../includes/end.ejs') %>

